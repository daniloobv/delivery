<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="200dp">


    <androidx.cardview.widget.CardView
        android:padding="5dp"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="190dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_margin="3dp"
            android:background="@drawable/rectangulo_image"
            android:paddingTop="2dp">


            <ImageView
                android:id="@+id/img_cat"
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/rectangulo_image2"
                android:padding="10dp"
                android:src="@drawable/motodelivery"



                />







            <TextView
                android:id="@+id/nombre_comercial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="5dp"
                android:text="nombre comercial"
                android:textColor="@color/black"
                android:textStyle="bold"/>



            <TextView
                android:id="@+id/categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="30dp"
                android:text="categoria"
                android:textColor="@color/black"
                android:textStyle="bold"/>



            <TextView
                android:id="@+id/pais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="55dp"
                android:text="pais"
                android:textColor="@color/black"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/departamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="80dp"
                android:text="departamento"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="140dp"
                android:layout_marginTop="100dp" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btnListaServiciosE"

                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/btn_facebook"
                        android:layout_width="242dp"
                        android:padding="0dp"
                        android:textColor="@color/white"
                        android:text="LISTADO SERVICIOS"
                        android:layout_height="30dp"
                        />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="145dp" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/btnValor1"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/btn_redondeado_white"
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        app:srcCompat="@drawable/ic_baseline_star_border_24_color" />

                    <ImageView
                        android:id="@+id/btnValor2"
                        android:layout_margin="2dp"
                        android:background="@drawable/btn_redondeado_white"
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        app:srcCompat="@drawable/ic_baseline_star_border_24_color" />

                    <ImageView
                        android:id="@+id/btnValor3"
                        android:layout_margin="2dp"
                        android:background="@drawable/btn_redondeado_white"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_baseline_star_border_24_color" />


                    <ImageView
                        android:id="@+id/btnValor4"
                        android:layout_margin="2dp"
                        android:background="@drawable/btn_redondeado_white"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_baseline_star_border_24_color" />

                    <ImageView
                        android:id="@+id/btnValor5"
                        android:layout_margin="2dp"
                        android:background="@drawable/btn_redondeado_white"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_baseline_star_border_24_color" />


                    <Button
                        android:id="@+id/btnRakear"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/btn_facebook"
                        android:layout_width="110dp"
                        android:padding="0dp"
                        android:textColor="@color/white"
                        android:text="calificar"
                        android:layout_height="30dp"

                        />


                    <ImageView
                        android:id="@+id/contactarEmpresa"
                        android:layout_margin="2dp"
                        android:background="@drawable/btn_redondeado_white"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        app:srcCompat="@drawable/ic_baseline_call_24" />

                    <ImageView
                        android:id="@+id/btnEliminarE"
                        android:layout_margin="2dp"
                        android:background="@drawable/btn_redondeado_white"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        app:srcCompat="@drawable/ic_baseline_delete_forever_24" />

                    <ImageView
                        android:layout_marginRight="20dp"
                        android:id="@+id/btnEditarE"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/btn_redondeado_white"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        app:srcCompat="@drawable/ic_baseline_edit_24" />


                </LinearLayout>

            </LinearLayout>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
